<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />

        <title>{{title}}</title>

        <link rel="stylesheet" href="http://fonts.googleapis.com/css?family=Inconsolata&amp;v1" />
        <link rel="stylesheet" href="css/museo-sans/stylesheet.css" />

        <link rel="stylesheet" href="css/html5reset-1.6.1.css" />
        <link rel="stylesheet" href="css/pygments/tango.css" />
        <link rel="stylesheet" href="css/oxo.css" />

        <script src="js/jquery-1.6.1.min.js"></script>
        <script src="js/jquery.EqualHeights.js"></script>
        <script src="js/oxo.js"></script>
    </head>
    <body>
        <div id="container"> 
            <!-- Documentation title and description -->
            <div id="title">
                <div class="header block">
                    <div class="left">
                        <div>
                            <h1>
                                {{title}}
                            </h1>
                        </div>
                    </div>
                    <div class="right">
                        <div>&nbsp;</div>
                    </div>
                    <div class="clear"></div>
                </div>
            </div>

            <!-- Single files -->
            {{#file}}
            <!-- Title and filename -->
            <div class="file">
                <div class="header block">  
                    <div class="left">
                        <div>
                            <h2>{{name}}</h2>
                        </div>
                    </div>
                    <div class="right">
                        <div>
                            {{fileName}}
                        </div>
                    </div>
                    <div class="clear"></div>
                </div>

                <!-- File contents -->
                {{#content}}
                <div class="content block">
                    <div class="left">
                        <div>
                            {{#comment}}
                            {{{body}}}
                            <hr />
                            <ul>
                                {{#tag}}
                                <li>
                                    {{{body}}}
                                </li>
                                {{/tag}}
                            </ul>
                            {{/comment}}
                        </div>
                    </div>
                    <div class="right">
                        <div>
                            {{{code}}}
                        </div>
                    </div>
                    <div class="clear"></div>
                </div>
                {{/content}}
            </div>
            {{/file}}

            <!-- Sections -->
            {{#section}}
            <div class="section">
                <div class="header block">
                    <div class="left">
                        <div>
                            <h2>{{title}}</h2>
                        </div>
                    </div>
                    <div class="right">
                        <div>&nbsp;</div>
                    </div>
                    <div class="clear"></div>
                </div>

                {{#file}}
                <!-- Title and filename -->
                <div class="file">
                    <div class="header block">
                        <div class="left">
                            <div>
                                <h3>{{name}}</h3>
                            </div>
                        </div>
                        <div class="right">
                            <div>
                                {{fileName}}
                            </div>
                        </div>
                        <div class="clear"></div>
                    </div>

                <!-- File contents -->
                    {{#content}}
                    <div class="content block">
                        <div class="left">
                            <div>
                                {{#comment}}
                                {{{body}}}
                                <hr />
                                <ul>
                                    {{#tag}}
                                    <li>
                                        {{{body}}}
                                    </li>
                                    {{/tag}}
                                </ul>
                                {{/comment}}
                            </div>
                        </div>
                        <div class="right">
                            <div>
                                {{{code}}}
                            </div>
                        </div>
                        <div class="clear"></div>
                    </div>
                    {{/content}}
                </div>
                {{/file}}
            </div>
            {{/section}}
        </div>
    </body>
</html>
